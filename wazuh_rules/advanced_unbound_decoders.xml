<decoder name="unbound">
  <program_name>^unbound</program_name>
</decoder>

<decoder name="unbound">
  <parent>unbound</parent>
  <regex>(\w+):\s+(\d+\.\d+\.\d+\.\d+)\s+(\S+)\s+(\S+)\s+</regex>
  <order>action, srcip, url, record_type</order>
</decoder>

<decoder name="unbound">
  <parent>unbound</parent>
  <regex>IN\s+(\S+)</regex>
  <order>status</order>
</decoder>